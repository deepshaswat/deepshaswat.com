{
  "private": true,
  "scripts": {
    "build": "NODE_OPTIONS='--no-warnings=ExperimentalWarning' yarn workspace @repo/ui build && yarn prisma-generate && turbo build",
    "dev": "NODE_OPTIONS='--no-warnings=ExperimentalWarning' yarn workspace @repo/ui build && turbo dev --filter=@repo/admin --filter=@repo/web",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "test:actions": "vitest run __tests__/actions",
    "test:integration": "vitest run __tests__/integration",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prisma-generate": "dotenv -e .env -- prisma generate --schema=packages/db/prisma/schema.prisma",
    "db:push": "dotenv -e .env -- prisma db push --schema=packages/db/prisma/schema.prisma",
    "npm-clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "dist-clean": "find . -name \"dist\" -type d -prune -exec rm -rf '{}' +",
    "full-clean": "yarn npm-clean && yarn dist-clean"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@repo/typescript-config": "*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.0.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tsx": "^4.7.0",
    "turbo": "^2.7.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.633.0",
    "@aws-sdk/s3-request-presigner": "^3.633.0",
    "@blocknote/core": "^0.23.1",
    "@blocknote/mantine": "^0.23.1",
    "@blocknote/react": "^0.23.1",
    "@changesets/cli": "^2.27.6",
    "@clerk/themes": "^2.4.50",
    "@headlessui/react": "^2.1.2",
    "@hookform/resolvers": "^3.3.4",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "14.0.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@react-email/components": "0.0.31",
    "@react-email/html": "^0.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "axios": "^1.7.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "emoji-picker-react": "^4.11.1",
    "framer-motion": "^11.15.0",
    "fuzzy-search": "^3.2.1",
    "ioredis": "^5.4.1",
    "kbar": "^0.1.0-beta.45",
