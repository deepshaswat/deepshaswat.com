# ===========================================
# Clerk Authentication
# ===========================================
# Get from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# ===========================================
# AWS S3 (Image uploads)
# ===========================================
# Get from: AWS Console > IAM > Security credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1

# ===========================================
# Resend (Email/Newsletter)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=
RESEND_AUDIENCE_ID=

# For webhook signature verification (planned feature)
# Get from: Resend Dashboard > Webhooks
RESEND_WEBHOOK_SECRET=

# ===========================================
# MongoDB Database
# ===========================================
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
DATABASE_URL=

# ===========================================
# Redis (Caching)
# ===========================================
# For DigitalOcean Managed Redis or any Redis provider
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_HOST=
REDIS_PORT=25061

# ===========================================
# Google Cloud / Vertex AI (AI Features)
# ===========================================
# Get from: Google Cloud Console > Project Settings
GCP_PROJECT_ID=

# Region for Vertex AI (default: us-central1)
# See: https://cloud.google.com/vertex-ai/docs/general/locations
GCP_LOCATION=us-central1

# Path to service account JSON key file
# See setup instructions below
GOOGLE_APPLICATION_CREDENTIALS=/path/to/vertex-ai-key.json

# ===========================================
# Cron Job Secret
# ===========================================
# Used to secure scheduled publishing endpoint
# Generate with: openssl rand -hex 32
CRON_SECRET=

# ===========================================
# PostHog Analytics (Web app only)
# ===========================================
# Get from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
